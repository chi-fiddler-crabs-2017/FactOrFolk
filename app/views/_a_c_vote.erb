<div class="answer_comment_votes">
  <form method="post" action="/questions/<%=question.id%>/answers/<%= answer.id %>/comments/<%= comment.id %>/vote" id="a_c_upvote">
    <button id="upvote" class="btn btn-info btn-primary btn-md glyphicon glyphicon-arrow-up" type="submit" name="upvote" value="YES">YES</button>
  </form>
  <p class="badge"><%= comment.vote_count %></p>

  <form method="post" action="/questions/<%=question.id%>/answers/<%= answer.id %>/comments/<%= comment.id %>/vote" id="a_c_downvote">
    <button id="downvote" class="btn btn-info btn-danger btn-md glyphicon glyphicon-arrow-down" type="submit" name="downvote" value="NOPE">NOPE</button>
  </form>
</div>
