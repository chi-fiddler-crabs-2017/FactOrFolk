<div class="question_comment_votes">
  <form method="post" action="/questions/<%=question.id%>/comments/<%= comment.id %>/vote" id="q_c_upvote">
    <button class="btn btn-info btn-primary btn-md glyphicon glyphicon-arrow-up" id="upvote" type="submit" name="upvote" value="YES">YES</button>
  </form>
  <p class="badge"><%= comment.vote_count %></p>

  <form method="post" action="/questions/<%=question.id%>/comments/<%= comment.id %>/vote" id="q_c_downvote">
    <button class="btn btn-info btn-danger btn-md glyphicon glyphicon-arrow-down" id="downvote" type="submit" name="downvote" value="NOPE">NOPE</button>
  </form>
</div>
